@model IEnumerable<Cau4.Models.HangHoa>

@{
    ViewData["Title"] = "Quản lý Hàng Hóa";
}

<h2>Quản lý Hàng Hóa</h2>

<p>
    <a asp-action="Create">Thêm Hàng Hóa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHangHoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenHangHoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHangHoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHangHoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-maHangHoa="@item.MaHangHoa">Sửa</a> |
                    <a asp-action="Delete" asp-route-maHangHoa="@item.MaHangHoa">Xóa</a> |
                    <a asp-action="UpdateNote" asp-route-maHangHoa="@item.MaHangHoa">Cập nhật Ghi Chú</a>
                </td>
            </tr>
        }
    </tbody>
</table>